# smart-maintenance-saas/Dockerfile.mlflow
FROM python:3.11-slim

WORKDIR /app

# Install dependencies (pin SQLAlchemy <2.0 for compatibility if needed)
RUN pip install --no-cache-dir mlflow "sqlalchemy<2.0" psycopg2-binary

EXPOSE 5000

# Backend store (SQLite) and artifact root volumes are mounted via docker-compose
CMD ["mlflow", "server", "--host", "0.0.0.0", "--port", "5000", "--backend-store-uri", "sqlite:////mlflow_db/mlflow.db", "--default-artifact-root", "/mlruns"]
